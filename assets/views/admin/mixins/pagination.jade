mixin pagination(numPages, curr, base)
    nav
        ul.pagination
            - if(curr==1) 
                li.disabled
                    a(href='#') Prev
            - else
                li
                    a(href='#{base}#{(curr=curr-1)}') Prev
            - for(var i=0;i<start+numPages;i++) {
                - if(i==curr)
                    li.active
                        a(href='#{base}#{i}') #{i}
                - else
                    li
                        a(href='#{base}#{i}') #{i}
            - }
            li
                a(href='#{base}#{(curr=curr+1)}') Next
