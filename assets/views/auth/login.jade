doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Please Login
    link(href='/css/app.css', rel='stylesheet')
  body
    .container
      form.form-signin(role='form', method="post", action="/auth/login")
        h2.form-signin-heading Please sign in
        
        - if ('undefined' !== typeof errors && errors.length)
            ul#errors
            - each error in errors
                li.error= error
        
        input.form-control(type='text', name='username', placeholder='username', required='', autofocus='')
        input.form-control(type='password', name='password', placeholder='Password', required='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
